{{!--
    Table Grid Widget
    =================

    @see `charcoal/admin/widget/table`

    This widget expects to be in a context (model) of type `Charcoal\Admin\Widget\TableGrid`.
--}}
<div class="charcoal-admin-widget-table-grid o-widget o-section" id="{{ widgetId }}">
    {{# hasObjects }}
    {{# showTableHeader }}
    {{> charcoal/admin/widget/table/header }}
    {{/ showTableHeader }}

    <div class="js-grid-container row clearfix" style="min-height:100px;">
        {{# objectRows }}
        {{> charcoal/admin/widget/table-grid/item }}
        {{/ objectRows }}

        {{# paginationWidget }}
        {{> charcoal/admin/widget/table/pagination }}
        {{/ paginationWidget }}
    </div>
    {{/ hasObjects }}

    {{^ hasObjects }}
    {{> charcoal/admin/widget/table/empty }}
    {{/ hasObjects }}
</div>

{{> charcoal/admin/widget/table/css }}
{{> charcoal/admin/widget/table/js }}
