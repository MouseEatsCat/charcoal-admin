<div id="{{widgetId}}" class="o-widget">
    <div class="o-container">
        <div class="js-map-maker-map" style="height: 400px; width: 100%;"></div>
    </div>
</div>

{{#addJs}}
<script>
Charcoal.Admin.manager().add_widget({
    id: '{{widgetId}}',
    type: 'charcoal/admin/widget/map',
    data: {
        obj_type: '{{objType}}'
    },
    coords : [ {{obj.lat}}, {{obj.lng}} ]
});
</script>
{{/addJs}}
