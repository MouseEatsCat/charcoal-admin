{{!--
    Search Form Widget
    ==================

    @see `charcoal/admin/widget/search`

    This widget is paired with `Charcoal\Admin\Widget\Table`.
--}}
<form id="{{ widgetId }}" class="o-container_aside o-widget" method="{{ formMethod }}" action="{{ formAction }}">
    <div class="input-group">
        <input type="text" name="query" class="form-control input-sm" placeholder="{{# _t }}Searchâ€¦{{/ _t }}">
        <span class="input-group-btn">
            <button type="submit" class="btn btn-default input-sm js-search">
                <span class="fa fa-search" aria-hidden="true"></span>
                <span class="btn-label sr-only">{{# _t }}Search{{/ _t }}</span>
            </button>
            <button type="reset" class="btn btn-default input-sm js-undo">
                <span class="fa fa-undo" aria-hidden="true"></span>
                <span class="btn-label sr-only">{{# _t }}Clear Results{{/ _t }}</span>
            </button>
        </span>
    </div>

    <input type="hidden" name="widget_id" value="{{ widgetId }}">
    <input type="hidden" name="obj_type" value="{{ objType }}">
    <input type="hidden" name="obj_id" value="{{ objId }}">
</form>

{{# addJs }}
<script>
Charcoal.Admin.manager().add_widget({
    id:   '{{ widgetId }}',
    type: 'charcoal/admin/widget/search',
    data: {
        obj_type: '{{ objType }}',
        list: {{& jsonPropertiesList }}
    }
});
</script>
{{/ addJs }}
